<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_makesure_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        android:background="@drawable/bg_makesure_dialog"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@mipmap/dialog_close"/>
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.0"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:text="4324234324"
            android:textColor="#2d2d2d"
           />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_update_msg"
            android:textColor="#2d2d2d"
            android:padding="10dp"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="#f0f0f0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/color_blue"
                android:background="@color/transparent"
                android:text="立即更新" />


            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_login_text_gray"
                android:background="@color/transparent"
                android:text="立即查看" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>