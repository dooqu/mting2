<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/v_dialog_main_list_menu_out"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_dialog_share_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="将文章分享到"
        android:textColor="@color/c333333"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_main_list_menu_wx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_f_wx"
            android:drawablePadding="10dp"
            android:textSize="15sp"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:text="微信好友" />

        <TextView
            android:id="@+id/tv_dialog_main_list_menu_wxp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_f_wxp"
            android:drawablePadding="10dp"
            android:textSize="15sp"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:text="朋友圈" />

        <TextView
            android:id="@+id/tv_dialog_main_list_menu_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_f_qq"
            android:textSize="15sp"
            android:textColor="@color/color_666666"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="QQ好友" />

        <TextView
            android:id="@+id/tv_dialog_main_list_menu_quen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_f_quen"
            android:textSize="15sp"
            android:textColor="@color/color_666666"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="QQ空间" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_dedede" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_main_list_menu_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/color_666666"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_f_copy"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="复制连接" />

        <TextView
            android:id="@+id/tv_dialog_main_list_menu_love"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_f_love"
            android:textSize="15sp"
            android:textColor="@color/color_666666"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="收藏" />

        <TextView
            android:id="@+id/tv_dialog_main_list_menu_del"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/color_666666"
            android:drawableTop="@mipmap/icon_f_del"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="删除" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_dedede" />

    <TextView
        android:id="@+id/tv_dialog_main_list_menu_cancel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/c999999"
        android:textSize="15sp" />
</LinearLayout>