<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_root"
    android:layout_height="match_parent">

    <include layout="@layout/title_include"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="60dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_333333"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_my_head"
            android:src="@mipmap/my_head"
            android:layout_toLeftOf="@+id/iv_arrow_1"
            android:scaleType="centerCrop"
           />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_arrow_1"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="16sp"
            android:textColor="@color/color_333333"/>


        <FrameLayout
            android:id="@+id/fl_et_nick_name"
            android:layout_width="100dp"
            android:layout_weight="1.0"
            android:layout_toLeftOf="@+id/iv_arrow_2"
            android:layout_gravity="right"

            android:layout_height="wrap_content">
        <EditText
            android:background="@android:color/transparent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_nickName"
            android:maxLength="15"
            android:maxLines="1"
            android:layout_gravity="right"
            android:imeOptions="actionSearch"
            android:gravity="right"
            android:textSize="@dimen/text_16"
            android:visibility="gone"
          />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="right"
                android:textSize="@dimen/text_16"
                android:id="@+id/tv_nick_name"/>
        </FrameLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_arrow_2"/>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="16sp"
            android:textColor="@color/color_333333"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sex"
            android:layout_toLeftOf="@+id/iv_arrow_3"
            android:textSize="@dimen/text_16"
            android:text="@string/please_choose"
          />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_arrow_3"/>

    </RelativeLayout>






</LinearLayout>