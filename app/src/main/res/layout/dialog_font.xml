<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="字体大小"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_dedede" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_small"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/tv_font_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:text="小" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/iv_small"
            android:layout_toRightOf="@id/tv_font_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ico_font_check" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_normal"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/tv_font_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="21sp"
            android:text="中" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_font_middle"
            android:layout_centerVertical="true"
            android:id="@+id/iv_normal"
            android:visibility="invisible"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ico_font_check" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_large"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/tv_font_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_centerInParent="true"
            android:text="大" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_font_max"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:id="@+id/iv_large"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ico_font_check" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_dedede" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_15" />
</LinearLayout>