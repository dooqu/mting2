<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="DetailTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:statusBarColor">@color/color_main_bllue</item>

        <item name="colorPrimary">@color/color_main_bllue</item>
        <!--状态栏的颜色-->
        <item name="colorPrimaryDark">@color/color_main_bllue</item>
        <!--默认的光标、选中的RadioButton颜色-->
        <item name="colorAccent">@color/color_main_bllue</item>
        <!-- 避免控件会顶到状态栏上 -->
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="base_dim_dialog">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="dialog_bottom_full" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="share_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <declare-styleable name="ArcProgress"><attr format="dimension" name="borderWidth"/><attr format="color" name="unprogresColor"/><attr format="color" name="progressColor"/><attr format="dimension" name="tickWidth"/><attr format="integer" name="tickDensity"/><attr format="boolean" name="bgShow"/><attr format="dimension" name="radius"/><attr format="color" name="arcbgColor"/><attr format="integer" name="degree"/><attr format="boolean" name="arcCapRound"/><attr format="enum" name="progressStyle"><enum name="tick" value="1"/><enum name="arc" value="0"/></attr></declare-styleable>


    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/text_20</item>
    </style>

</resources>
